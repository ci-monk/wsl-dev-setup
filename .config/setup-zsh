declare -A files

files=(
  [CONFIG_AWS_PROD]=config-aws-prod
  [CONFIG_AWS_STAGE]=config-aws-stage
  [CONFIG_AWS_SANDBOX]=config-aws-sandbox
  [CONFIG_AWS_DEVELOP]=config-aws-develop
  [CONFIG_AWS_LABS]=config-aws-labs
  [CONFIG_CNB_PROD]=config-cnb-prod
  [CONFIG_GCP_DEVELOP]=config-gcp-develop
  [CONFIG_ITSM_DEVELOP]=config-itsm-develop
  [CONFIG_ITSM_PROD]=config-itsm-prod
  [CONFIG_NUTANIX_FASS]=config-nutanix-faas
)

for key value in ${(kv)files}; do touch $HOME/.kube/$value && export $key=$HOME/.kube/$value && KUBECONFIG+=":$HOME/.kube/$value"; done

# YARN
export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"

# KREW
export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"

# PYENV
export PATH="/home/lucca/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"
