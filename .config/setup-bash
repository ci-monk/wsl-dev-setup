declare -A files
KUBECONFIG_PATH="$HOME/.kube"
KUBECONFIG="$KUBECONFIG_PATH/config"

files=(
  [CONFIG_AWS_PROD]="$KUBECONFIG_PATH/config-aws-prod"
  [CONFIG_AWS_STAGE]="$KUBECONFIG_PATH/config-aws-stage"
  [CONFIG_AWS_SANDBOX]="$KUBECONFIG_PATH/config-aws-sandbox"
  [CONFIG_AWS_DEVELOP]="$KUBECONFIG_PATH/config-aws-develop"
  [CONFIG_AWS_LABS]="$KUBECONFIG_PATH/config-aws-labs"
  [CONFIG_CNB_PROD]="$KUBECONFIG_PATH/config-cnb-prod"
  [CONFIG_GCP_DEVELOP]="$KUBECONFIG_PATH/config-gcp-develop"
  [CONFIG_ITSM_DEVELOP]="$KUBECONFIG_PATH/config-itsm-develop"
  [CONFIG_ITSM_PROD]="$KUBECONFIG_PATH/config-itsm-prod"
  [CONFIG_NUTANIX_FASS]="$KUBECONFIG_PATH/config-nutanix-faas"
)

for file in "${!files[@]}"; do
  if [ -f ${files[${file}]} ]; then
    export $file="${files[${file}]}" && KUBECONFIG+=":${files[${file}]}"
  fi
done

# KUBECONFIG
export KUBECONFIG=$KUBECONFIG

# GOLANG
export GOROOT=/home/lucca/.go
export PATH=$GOROOT/bin:$PATH

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# YARN
export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"

# KREW
export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"

# PYENV
export PATH="/home/lucca/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"
