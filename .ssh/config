# Default GitHub
Host github.com
  HostName github.com
  PreferredAuthentications publickey
  IdentityFile ~/.ssh/id_rsa_github

# Default GitLab
Host gitlab.com
  HostName gitlab.com
  PreferredAuthentications publickey
  IdentityFile ~/.ssh/id_rsa_gitlab

# Default GitLab Stefanini
Host git.stefanini.io
  HostName git.stefanini.io
  PreferredAuthentications publickey
  IdentityFile ~/.ssh/id_rsa_gitlab_stefanini

# Default GitLab ITSM
Host git.stfcia.com.br
  HostName git.stfcia.com.br
  PreferredAuthentications publickey
  IdentityFile ~/.ssh/id_rsa_gitlab_stfcia
